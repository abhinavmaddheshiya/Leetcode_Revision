class Solution {
public:
    int minCostClimbingStairs(vector<int>& cost) {
        int n=cost.size();
        cost.push_back(0);
        vector<int> dp(n+1, -1);
        dp[0]=cost[0], dp[1]=cost[1];
        for(int i=2;i<=n;i++){
            int way1=cost[i]+dp[i-1];
            int way2=cost[i]+dp[i-2];
            dp[i]=min(way1, way2);
        }
        return dp[n];
    }
};
